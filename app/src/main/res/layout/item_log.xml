<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.MirageNotify.Card"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="App Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m ago"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Modified Badge -->
        <TextView
            android:id="@+id/tv_modified_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modified"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/badge_modified"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Original Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original Title"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_original_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original content text"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Modified Content -->
        <LinearLayout
            android:id="@+id/layout_modified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modified"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/tv_modified_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modified Title"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_modified_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modified content text"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
